
<div class="container">
  <div class="row pt-4">
    <div class="col-sm-6">
      <h2>Create Task</h2>
      <div class="mt-4 mb-4">
        <%= simple_form_for(@task) do |f| %>
          <%= f.input :title %>
          <%= f.input :details %>
          <!-- <%= f.label :completed %>
          <%= f.check_box :completed %>-->
         <%= f.submit 'Add Task', class: "btn btn-primary" %>
        <% end %>
      </div>
      <hr/>
      <%= link_to '<i class="fa-regular fa-arrow-left"></i> Back to list'.html_safe, tasks_path, :class => "text-decoration-none" %>
    </div>
  </div>
</div>
